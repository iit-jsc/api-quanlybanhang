  unit          String?     @db.Text
  unitPrice     Float
  amount        Float
  vatRate       Float       @default(0)
  vatAmount     Float       @default(0)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orderDetail   OrderDetail @relation(fields: [orderDetailId], references: [id])
